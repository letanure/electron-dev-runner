{
  "name": "@letanure/electron-dev-runner",
  "private": false,
  "version": "1.0.10",
  "description": "A GitHub-styled Electron app for managing and running development projects with automatic port detection and window management",
  "main": "main.js",
  "bin": {
    "electron-dev-runner": "bin/cli.js",
    "dev-runner": "bin/cli.js"
  },
  "author": "letanure",
  "license": "MIT",
  "keywords": [
    "electron",
    "dev-tools",
    "project-manager",
    "development",
    "vite",
    "react"
  ],
  "files": [
    "dist",
    "main.js",
    "bin",
    "package.json",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/letanure/electron-dev-runner.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "npm run build && electron-builder --dir",
    "lint": "eslint .",
    "preview": "vite preview",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "semantic-release": "^24.2.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  },
  "build": {
    "appId": "com.letanure.electron-dev-runner",
    "productName": "Electron Dev Runner",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "node_modules/**/*",
      "!node_modules/.bin"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "letanure",
      "repo": "electron-dev-runner"
    }
  }
}
